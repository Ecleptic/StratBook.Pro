{
    "name": "strat-book-frontend",
    "version": "1.0.1",
    "description": "A StratBook for video game pros",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon server.js",
        "build": "next build",
        "// start": "next start -p $PORT",
        "start": "node server.js",
        "test": "NODE_ENV=test jest --watch",
        "export": "npm run build && next export",
        "test-win": "SET NODE_ENV=test&& jest --watch",
        "// heroku-postbuild": "next build"
    },
    "author": "Cameron Green",
    "license": "ISC",
    "engines": {
        "node": "12.x"
    },
    "dependencies": {
        "@ckeditor/ckeditor5-build-classic": "^16.0.0",
        "@ckeditor/ckeditor5-react": "^2.1.0",
        "apollo-boost": "^0.4.7",
        "apollo-client": "^2.6.8",
        "async-reactor": "^1.2.2",
        "babel-core": "^6.26.3",
        "date-fns": "^2.9.0",
        "downshift": "^4.0.7",
        "draft-js": "^0.11.4",
        "draft-js-import-markdown": "^1.4.0",
        "draftjs-md-converter": "^1.3.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "express": "^4.17.1",
        "formik": "^2.1.2",
        "graphql": "^14.5.8",
        "graphql-tag": "^2.10.1",
        "jodit-react": "^1.0.37",
        "lodash.debounce": "^4.0.8",
        "next": "^11.1.0",
        "next-url-prettifier": "^1.4.0",
        "next-with-apollo": "^4.3.0",
        "nprogress": "^0.2.0",
        "ory-editor": "^0.6.0",
        "prop-types": "^15.7.2",
        "react": "^16.12.0",
        "react-adopt": "^0.6.0",
        "react-apollo": "^3.1.3",
        "react-dom": "^16.12.0",
        "react-markdown": "^4.3.1",
        "react-pell": "^0.4.0",
        "react-rte": "^0.16.1",
        "react-stripe-checkout": "^2.6.3",
        "react-textarea-markdown": "^1.1.3",
        "react-transition-group": "^4.3.0",
        "speakingurl": "^14.0.1",
        "styled-components": "^5.0.1",
        "waait": "^1.0.5"
    },
    "devDependencies": {
        "@babel/plugin-proposal-optional-chaining": "^7.8.3",
        "babel-jest": "^24.9.0",
        "babel-plugin-module-resolver": "^4.0.0",
        "babel-plugin-styled-components": "^1.10.7",
        "casual": "^1.6.2",
        "enzyme-to-json": "^3.4.3",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-plugin-better-styled-components": "^1.1.2",
        "eslint-plugin-import": "^2.20.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.18.0",
        "graphql-tools": "^4.0.6",
        "jest": "^24.9.0",
        "jest-transform-graphql": "^2.1.0",
        "nodemon": "^2.0.2"
    },
    "jest": {
        "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
        "testPathIgnorePatterns": [
            "<rootDir>/.next/",
            "<rootDir>/node_modules/"
        ],
        "transform": {
            "\\.(gql|graphql)$": "jest-transform-graphql",
            ".*": "babel-jest",
            "^.+\\.js?$": "babel-jest",
            "*.js?$": "@babel/plugin-proposal-optional-chaining"
        }
    },
    "//": "This is our babel config, I prefer this over a .babelrc file",
    "babel": {
        "env": {
            "development": {
                "presets": [
                    "next/babel"
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true,
                            "preprocess": false
                        },
                        "@babel/plugin-proposal-optional-chaining"
                    ]
                ]
            },
            "production": {
                "presets": [
                    "next/babel"
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        },
                        "@babel/plugin-proposal-optional-chaining"
                    ]
                ]
            },
            "test": {
                "presets": [
                    [
                        "next/babel",
                        {
                            "preset-env": {
                                "modules": "commonjs"
                            }
                        }
                    ]
                ],
                "plugins": [
                    [
                        "styled-components",
                        {
                            "ssr": true,
                            "displayName": true
                        }
                    ]
                ]
            }
        }
    }
}
